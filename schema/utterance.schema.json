{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hansard Utterance",
  "type": "object",
  "required": [
    "id",
    "date",
    "section_heading",
    "timestamp_local",
    "utterance_index",
    "speaker",
    "speech_type",
    "text",
    "source"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "chamber": {
      "type": "string"
    },
    "section_heading": {
      "type": "string"
    },
    "timestamp_local": {
      "type": "string"
    },
    "utterance_index": {
      "type": "integer",
      "minimum": 0
    },
    "speaker": {
      "type": "object",
      "required": [
        "display"
      ],
      "properties": {
        "display": {
          "type": "string"
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "electorate": {
          "type": [
            "string",
            "null"
          ]
        },
        "role": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "speech_type": {
      "type": "string",
      "enum": [
        "speech",
        "motion",
        "procedure",
        "list"
      ]
    },
    "text": {
      "type": "string"
    },
    "qa": {
      "type": "object",
      "properties": {
        "is_question": {
          "type": "boolean"
        },
        "question_type": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "information",
            "rhetorical",
            "procedural",
            null
          ]
        },
        "addressee_role": {
          "type": [
            "string",
            "null"
          ]
        },
        "answer_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "answer_match": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "direct",
            "partial",
            "challenge",
            null
          ]
        },
        "answer_confidence": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": true
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "source": {
      "type": "object",
      "required": [
        "file",
        "version",
        "line_start",
        "line_end"
      ],
      "properties": {
        "file": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "enum": [
            "preliminary",
            "final",
            "unknown"
          ]
        },
        "line_start": {
          "type": "integer",
          "minimum": 1
        },
        "line_end": {
          "type": "integer",
          "minimum": 1
        },
        "sha256": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  },
  "additionalProperties": false
}